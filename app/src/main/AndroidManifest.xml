<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.hawksjamesf.spacecraft">
    <!-- 允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 获取GSM（2g）、WCDMA（联通3g）等网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" /> <!-- 保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.WAKE_LOCK" /> <!-- 获取sd卡写的权限，用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- 允许读取手机状态 用于创建BmobInstallation -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.hawksjamesf.spacecraft.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">

        <meta-data
            android:name="BUGLY_APPID"
            android:value="${BUGLY_APP_ID}" />
        <meta-data
            android:name="BUGLY_APP_VERSION"
            android:value="${BUGLY_APP_VERSION}" />
        <!--<meta-data-->
        <!--android:name="BUGLY_APP_CHANNEL"-->
        <!--android:value="${BUGLY_APP_CHANNEL}"/>-->
        <meta-data
            android:name="BUGLY_ENABLE_DEBUG"
            android:value="${BUGLY_ENABLE_DEBUG}" />

        <uses-library
            android:name="android.test.runner"
            android:required="false" />
        <uses-library
            android:name="android.test.base"
            android:required="false" />
        <uses-library
            android:name="android.test.mock"
            android:required="false" />

        <meta-data
            android:name="firebase_performance_logcat_enabled"
            android:value="true" />
        <!--        在编译时停用库，但允许应用在运行时启用它-->
        <meta-data
            android:name="firebase_performance_collection_enabled"
            android:value="true" />
        <!--        在编译时停用库，但不允许应用在运行时启用它-->
        <!--        <meta-data-->
        <!--            android:name="firebase_performance_collection_deactivated"-->
        <!--            android:value="true" />-->

        <activity android:name="com.hawksjamesf.spacecraft.ui.person.SettingsActivity" />
        <activity
            android:name="com.hawksjamesf.spacecraft.ui.MainActivity"
            android:label="@string/title_activity_main"
            android:launchMode="singleTop" />
        <activity
            android:name="com.hawksjamesf.spacecraft.ui.home.HomeActivity"
            android:launchMode="singleTop"
            android:theme="@style/HomeTheme" />

        <activity
            android:name="com.hawksjamesf.spacecraft.ui.SplashActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/FullscreenTheme">
            <!--            launcher启动 start-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!--            launcher启动 end -->
            <!--            浏览器启动 start-->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="hj"></data>
            </intent-filter>
            <!--            浏览器启动 end-->
            <!--            firebase app indexing启动 start-->
            <!--            firebase app indexing启动 end-->

        </activity>
        <activity
            android:name="com.hawksjamesf.spacecraft.ui.SetupWizardActivity"
            android:label="@string/title_activity_setup_wizard"
            android:theme="@style/AppTheme" />


        <activity
            android:name="com.hawksjamesf.spacecraft.ui.signin.SignInActivity"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden" />
        <activity
            android:name="com.hawksjamesf.spacecraft.ui.signin.SignUpActivity"
            android:parentActivityName="com.hawksjamesf.spacecraft.ui.signin.SignInActivity"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden" />

        <activity android:name=".NavigationActivity" />
        <activity android:name=".PagingActivity" />
        <activity android:name=".sourceFromNetwork.NetworkActivity" />
        <activity android:name=".sourceFromNetwork.reddit.ui.RedditActivity" />

        <provider
            android:name="androidx.work.impl.WorkManagerInitializer"
            android:authorities="${applicationId}.workmanager-init"
            android:directBootAware="false"
            android:exported="false"
            android:multiprocess="true"
            tools:node="remove"
            tools:targetApi="n" />

        <activity android:name="com.example.background.SelectImageActivity" />
        <activity android:name="com.example.background.FilterActivity" />
        <activity android:name=".vm.MVVMActivity" />
    </application>

</manifest>