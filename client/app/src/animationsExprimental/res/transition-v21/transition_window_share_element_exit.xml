<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- changeBounds is used for the TextViews which are shared -->
    <changeBounds android:matchOrder="@string/app_name" />

    <!-- changeImageTransform is used for the ImageViews which are shared -->
    <changeImageTransform android:matchOrder="@string/app_name" />
    <changeTransform
        android:reparent="true"
        android:reparentWithOverlay="true" />
    <changeScroll android:matchOrder="@string/app_name" />
    <changeClipBounds android:matchOrder="@string/app_name" />

</transitionSet>