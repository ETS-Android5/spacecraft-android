<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".screen.profile.ProfileFragment">

    <TextView
        android:background="@color/apricot"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="profile " />
    <Button
        android:id="@+id/bt_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="settings"/>
    <Button
        android:textAllCaps="false"
        android:id="@+id/bt_inflate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="inflate viewstub"/>
    <ViewStub
        android:id="@+id/something_viewstub"
        android:layout_width="wrap_content"
        android:layout="@layout/viewstub_tag_sample"
        android:layout_height="wrap_content"/>

    <include android:id="@+id/something_include"
        layout="@layout/include_tag_sample"/>
</LinearLayout>