<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.hawksjamesf.myhome">

    <application >
        <activity android:name="com.hawksjamesf.myhome.ui.person.SettingsActivity" />
        <activity
            android:name="com.hawksjamesf.myhome.ui.MainActivity"
            android:label="@string/title_activity_main"
            android:launchMode="singleTop" >
            <!--            浏览器启动 start-->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="i.spacecraft.com"
                    android:path="/home"
                    android:scheme="https" />
                <data
                    android:host="www.spacecraft.com"
                    android:path="/home"
                    android:scheme="ispacecraft" />
                <data
                    android:host="i.spacecraft.com"
                    android:pathPrefix="/c/"
                    android:scheme="https" />
            </intent-filter>
            <!--            浏览器启动 end-->
            <!--            firebase app indexing启动 start-->
            <!--            firebase app indexing启动 end-->

        </activity>
        <activity
            android:name="com.hawksjamesf.myhome.ui.home.HomeActivity"
            android:launchMode="singleTop"
            />
<!--            android:theme="@style/HomeTheme" -->

        <activity
            android:name="com.hawksjamesf.myhome.ui.SplashActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan">
<!--            android:theme="@style/FullscreenTheme"-->
            <!--            launcher启动 start-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!--            launcher启动 end -->

        </activity>
        <activity
            android:name="com.hawksjamesf.myhome.ui.SetupWizardActivity"
            android:label="@string/title_activity_setup_wizard"
            android:theme="@style/AppTheme" />


        <activity
            android:name="com.hawksjamesf.myhome.ui.signin.SignInActivity"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden" />
        <activity
            android:name="com.hawksjamesf.myhome.ui.signin.SignUpActivity"
            android:parentActivityName="com.hawksjamesf.myhome.ui.signin.SignInActivity"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden" />

        <activity android:name="com.hawksjamesf.spacecraft.NavigationActivity" />
        <activity android:name="com.hawksjamesf.spacecraft.vm.MVVMActivity" />
        <activity android:name="com.hawksjamesf.myhome.WebViewActivity">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.spacecraft.com"
                    android:path="/web"
                    android:scheme="ispacecraft" />
                <data
                    android:host="www.spacecraft.com"
                    android:path="/web/"
                    android:scheme="ispacecraft" />
            </intent-filter>
        </activity>



